FROM python:3.10-slim

WORKDIR /app
COPY requirements.txt .

RUN pip install -r requirements.txt
COPY . .

ARG ENV
ARG APP_NAME
ARG KINESIS_STREAM_NAME
ARG AWS_REGION

ENV ENV=$ENV
ENV APP_NAME=$APP_NAME
ENV KINESIS_STREAM_NAME=$KINESIS_STREAM_NAME
ENV AWS_REGION=$AWS_REGION

EXPOSE 5000

CMD ["python", "main.py"]